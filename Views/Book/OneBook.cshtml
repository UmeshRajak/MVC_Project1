@using MVC_Project1.Models;
@model BookModel
@{ 
    Layout = "_Layout";
}

<h3 class="display-4">This Book is here</h3>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Images/book1.png" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="bg-dark">"It's  Greate!"</h5>
                            <p class="bg-dark">1</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/book2.png" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="bg-dark">It's Good!</h5>
                            <p class="bg-dark">2</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/book3.png" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="bg-dark">It's WOW!</h5>
                            <p class="bg-dark">3</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/book4.png" alt="Fourth slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="bg-dark">It's Best!</h5>
                            <p class="bg-dark">4</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/book5.png" alt="Fifth slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="bg-dark">It's Good!</h5>
                            <p class="bg-dark">5</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-primary">By:</span>
                    <span class="monospaced">@Model.Author</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <p class="description">
                        @Model.Description
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <button class="btn btn-outline-primary">
                        Read now
                    </button>
                </div>
            </div>

            <hr />

            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Category -</span>@Model.Category</li>
            </ul>
            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Total Pages -</span>@Model.TotalPages</li>
            </ul>
            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Language -</span>@Model.Language</li>
            </ul>
        </div>
       
</div>
</div>