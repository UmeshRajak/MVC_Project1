@model IEnumerable<BookModel>

@{
    ViewData["Title"] = "All Books";
}


<div class="container">
    <h3 class="display-4">All Books</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placholder-img card-img-top bg-dark" width="100%" height="225" xmlns="www.w3.org/2000/svg"></svg>
                    <div class="card-body">
                        <h3 class="card-title">@item.Title</h3>
                        <p class="card-text">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                                    
                                <a asp-controller="Book" asp-action="FindBook" asp-route-title="@item.Title" asp-route-authorName="@item.Author">FindBook</a>
                            </div>
                            <small class="text-muted">@item.Author</small>
                            
                            <div class="btn-group">
                                
                                <a asp-controller="Book" asp-action="OneBook" asp-route-id="@item.id">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }

    </div>
</div>



